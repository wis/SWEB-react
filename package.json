{
  "name": "sweb-react",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "parcel": "^2.0.0-beta.1"
  },
  "dependencies": {
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "scripts": {
    "start": "yarn run clean-dist; concurrently npm:watch-* --kill-others --kill-others-on-fail",
    "build": "yarn run clean-dist; concurrently npm:build-* --kill-others --kill-others-on-fail",
    "watch-pages": "parcel watch --public-url . ./src/*.html --dist-dir .",
    "build-pages": "parcel build --public-url . ./src/*.html --dist-dir .",
    "watch-scripts": "parcel watch --dist-dir . --no-hmr ./src/*.ts",
    "build-scripts": "parcel build --dist-dir . ./src/*.ts",
    "clean-dist": "rm *.*.js*; rm *.html",
    "help": "parcel --help"
  },
  "license": "MIT",
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "resolutions": {
    "node-forge": "0.10.0"
  }
}
